<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".CustomApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MindMate">
        <activity
            android:name=".views.screens.OnboardingSummaryActivity"
            android:exported="false"
            android:label="@string/title_activity_onboarding_summary"
            android:theme="@style/Theme.MindMate" />
        <activity
            android:name=".views.screens.HomeActivity"
            android:exported="false"
            android:label="@string/title_activity_home"
            android:theme="@style/Theme.MindMate" />
        <activity
            android:name=".views.screens.OnboardingActivity"
            android:exported="false"
            android:label="@string/title_activity_onboarding_screen"
            android:theme="@style/Theme.MindMate" />
        <activity
            android:name=".views.screens.NewJournalActivity"
            android:exported="false"
            android:label="@string/title_activity_journal"
            android:theme="@style/Theme.MindMate"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".views.screens.MainActivity"
            android:exported="false"
            android:label="@string/title_activity_journal"
            android:theme="@style/Theme.MindMate" />
        <activity
            android:name=".views.screens.AuthenticationActivity"
            android:exported="false"
            android:label="@string/title_activity_sign_in_screen"
            android:theme="@style/Theme.MindMate" />
        <activity
            android:name=".views.screens.SplashScreenActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MindMate">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>